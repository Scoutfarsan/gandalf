[Unit]
Description=Gandalf WireGuard Portal
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/gandalf-wg-portal.env
ExecStart=/opt/gandalf-wg-portal/portal.py
User=root
Group=root
Restart=on-failure
RestartSec=2
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/etc/wireguard /var/lib/gandalf-wg /etc/pihole /etc/dnsmasq.d /etc/duckdns

[Install]
WantedBy=multi-user.target
